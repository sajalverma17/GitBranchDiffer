<UserControl x:Class="GitBranchDiffer.View.BranchDiffWindowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"             
             xmlns:viewModel="clr-namespace:GitBranchDiffer.ViewModels"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance viewModel:BranchDiffViewModel}"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel Orientation="Vertical">            
            <TextBlock x:Name="TextBlockUnderText" Margin="10" 
                       HorizontalAlignment="Center" Text="{Binding ButtonTextToTest}"
                       Background="RosyBrown"
                       Foreground="Black"
                       >                
            </TextBlock>
        </StackPanel>
    </Grid>
</UserControl>
